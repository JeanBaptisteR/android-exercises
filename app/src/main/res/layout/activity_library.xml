<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    tools:context=".Library">

    <TextView
        android:id="@+id/left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/left_text"
        android:background="@color/red"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/below_left_text"
        android:background="@color/purple"
        android:layout_below="@id/left_text"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/right_text"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/center_text"
        android:background="@color/deep_purple"
        android:layout_centerInParent="true"
        android:layout_alignLeft="@id/center_bottom_above"
        android:layout_alignRight="@id/center_bottom_above"
        android:gravity="center"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/center_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_center_text"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/center_bottom_above"
        android:layout_above="@id/center_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/above_bottom_center_text"
        android:background="@color/blue"
        android:layout_centerInParent="true"
        android:padding="10dp"/>

</RelativeLayout>
